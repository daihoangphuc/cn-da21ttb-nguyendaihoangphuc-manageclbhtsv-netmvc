@model Manage_CLB_HTSV.Models.TinTuc

@{
    if (User.IsInRole("Administrators"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";

        <div>
            <h4>TinTuc</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TieuDe)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TieuDe)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HinhAnh)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NoiDung)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NoiDung)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NgayDang)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NgayDang)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MaSV)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MaSV)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.MaTinTuc">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
    else
    {
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs mt-0">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Tin tức</h2>
                    <ol>
                        <li><a href="/">Home</a></li>
                        <li> Tin tức</li>
                    </ol>
                </div>

            </div>
        </section>

        <!-- End Breadcrumbs -->
        <!-- ======= Portfolio Details Section ======= -->
        <section id="portfolio-details" class="portfolio-details">
            <div class="container">

                <div class="row gy-4">

                    <div class="col-lg-8 ">
                        <div class="portfolio-details-slider swiper" style="border-radius: 20px; width: 85%; height:85%">
                            <div class="swiper-wrapper align-items-center">

                                <div class="swiper-slide">
                                    @if (Model.HinhAnh == null)
                                    {
                                        <img src="https://picsum.photos/500" alt="">
                                    }
                                    else
                                    {
                                        <img class="rounded-2xl object-cover" src="@(Url.Content("~/newsimages/" + Model.HinhAnh))" alt="Hình ảnh" />
                                    }
                                </div>

                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>

                    <div class="col-lg-4" style="margin-top: -10px">

                        <div class="portfolio-description">
                            <h2>@Model.TieuDe</h2>
                            <p>
                                @Model.NoiDung
                            </p>
                        </div>
                        <div class="portfolio-info mt-4">
                            <h3>Thông tin bài đăng</h3>
                            <ul>
                                <li><strong>Người đăng</strong>: @Model.MaSV</li>
                                @*    <li><strong>Client</strong>: ASU Company</li> *@
                                <li><strong>Ngày đăng</strong>: @Model.NgayDang.ToString("dd MMMM, yyyy")</li>
                                @*   <li><strong>Project URL</strong>: <a href="#">www.example.com</a></li> *@
                            </ul>
                        </div>
                    </div>

                </div>

            </div>
        </section>

        <!-- End Portfolio Details Section -->
    }

}