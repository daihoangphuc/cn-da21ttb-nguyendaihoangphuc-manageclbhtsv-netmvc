@model IEnumerable<Manage_CLB_HTSV.Models.LopHoc>

@{
    if (User.IsInRole("Administrators"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">
        <button class="btn btn-primary mb-4">Tạo mới</button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaLop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khoahoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Khoahoc)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Khoa.TenKhoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaLop">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaLop">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaLop">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
